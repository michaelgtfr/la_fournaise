{% extends 'baseTwo.html.twig' %}

{%  block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('contact') }}
{%  endblock %}

{%  block body %}
<section class="contact-form container">
    <div class="title text-center p-3">
        <h2>Formulaire de contact:</h2>
    </div>
    <div class="row">
        {{ form_start(form) }}
        <div class="col-sm-12 p-3">
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.username) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
        </div>
        <div class="col-sm-12 p-3">
            {{ form_row(form.content) }}
        </div>
        <div class="col-sm-12 text-center p-3">
            <button type="submit" class="btn btn-greenmousse">Valider</button>
        </div>
        {{ form_end(form) }}
    </div>
</section>
{%  endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('contact') }}
{% endblock %}