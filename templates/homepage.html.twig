{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"
          integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A=="
          crossorigin=""/>
{% endblock %}

{% block body %}
    <section class="location">
        <div class="row">
            <div class="col-sm-12 text-center p-4">
                <h1 class="location__title">Localisations/Horaires:</h1>
            </div>
        </div>
        <div class="row">
            <div class="location__block-monday col-sm-4">
                {% for location in locations %}
                    {% if location.day == 1 %}
                        <div id="day-1" class="card text-white m-2" data-longitude={{ location.longitude }} data-latitude={{ location.latitude }}>
                            <img class="card-img" src="{{ asset('img/le_portel.jpg') }}" alt="Card image">
                            <div class="card-img-overlay text-center">
                                <a class="card-title" href="#"><h5>Lundi</h5></a>
                                <p class="cart-text hour"><i class="far fa-clock"></i> {{ location.beginHour|date("H:i") }} - {{ location.endTime|date("H:i") }}</p>
                                <p class="card-text address"><i class="fas fa-map-marker-alt"></i> {{ location.address }}</p>
                                <p class="card-text capitalize">{{ location.city|capitalize }}</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="location__block-tuesday col-sm-4">
                {% for location in locations %}
                    {% if location.day == 2 %}
                        <div id="day-2" class="card text-white m-2" data-longitude={{ location.longitude }} data-latitude={{ location.latitude }}>
                            <img class="card-img" src="{{ asset('img/equihen.jpg') }}" alt="Card image">
                            <div class="card-img-overlay text-center">
                                <h5 class="card-title">Mardi</h5>
