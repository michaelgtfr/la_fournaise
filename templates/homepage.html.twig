{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('homepage') }}
{% endblock %}

{% block body %}
    <section class="location">
        <div class="row">
            <div class="col-sm-12 text-center p-4">
                <h1 class="location__title">Localisations/Horaires:</h1>
            </div>
        </div>
        <div class="row">
            <div class="location__block-monday col-sm-4">
                {% for location in locations %}
                    {% if location.day == 1 %}
                        <div class="card text-white m-2">
                            <img class="card-img" src="{{ asset('img/le_portel.jpg') }}" alt="Card image">
                            <div class="card-img-overlay text-center">
                                <h5 class="card-title">Lundi</h5>
                                <p class="cart-text"><i class="far fa-clock"></i> {{ location.beginHour|date("H:i") }} - {{ location.endTime|date("H:i") }}</p>
                                <p class="card-text"><i class="fas fa-map-marker-alt"></i> {{ location.address }}</p>
                                <p class="card-text">{{ location.city|capitalize }}</p>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
